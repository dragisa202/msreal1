#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

int main()
{
FILE* fp1;
FILE* fp2;
FILE* fp3;
float percentage = 0;
long int period = 20000L;
char *str1;
char *str2;
char btn3, btn2, btn1, btn0;
char sw1, sw0;
size_t num_of_bytes = 6;
float x= 0;
int novo=0;
int staro=0;

while(1)
{
fp1 = fopen("/dev/switch", "r");
if(fp1==NULL)
{
puts("problem pri otvaranju fajla switch");
return -1;
}
str1 = (char *)malloc(num_of_bytes + 1);
getline(&str1, &num_of_bytes, fp1);

if(fclose(fp1))
{
puts("problem pri zatvaranju fajla switch");
return -1;
}

sw1 = str1[4] - 48;
sw0 = str1[5] - 48;
free(str1);

if(sw1 == 0 && sw0 == 0)
x = 0.05;
else if(sw1 == 0 && sw0 == 1)
x = 0.1;
else if(sw1 == 1 && sw0 == 0)
x = 0.15;
else
x = 0.2;

//printf("Vrednost prekidaca: %d %d \n", sw1, sw0);

fp2 = fopen("/dev/button", "r");
if(fp2==NULL)
{
puts("problem pri otvaranju fajla button");
return -1;
}
str2 = (char *)malloc(num_of_bytes + 1);
getline(&str2, &num_of_bytes, fp2);

if(fclose(fp2))
{
puts("problem pri zatvaranju fajla button");
return -1;
}

btn3 = str2[2] - 48;
btn2 = str2[3] - 48;
btn1 = str2[4] - 48;
btn0 = str2[5] - 48;
                novo = 0;
if(btn3) novo=4;
if(btn2) novo=3;
if(btn1) novo=2;
if(btn0) novo=1;

free(str2);

if(novo != staro)
{
if(novo == 4 && percentage>=0.1)
{
percentage-=0.1;
printf("%f\n", percentage);

}
